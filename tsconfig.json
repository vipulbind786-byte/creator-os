{
  "compilerOptions": {
    /* ===============================
       Core
    ================================ */
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    /* ===============================
       Strictness & Safety
    ================================ */
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "incremental": true,

    /* ===============================
       Interop
    ================================ */
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* ===============================
       âœ… PATH ALIAS (CRITICAL FIX)
       THIS WAS THE ROOT CAUSE
    ================================ */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* ===============================
       Next.js Plugin
    ================================ */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* ===============================
     File Inclusion
  ================================ */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  /* ===============================
     Exclusions
  ================================ */
  "exclude": ["node_modules"]
}